# Production Environment Variables Template
# Copy this file to .env.production and fill in the values

# ==========================================
# DOCKER & REGISTRY
# ==========================================
GITHUB_USERNAME=puzzo-dev
IMAGE_NAME=ghcr.io/puzzo-dev/ivarse-website
IMAGE_TAG=latest

# Build Information (auto-populated by Jenkins)
BUILD_DATE=
VCS_REF=
VERSION=1.0.0

# ==========================================
# DOMAIN & NETWORK
# ==========================================
DOMAIN=itechnologies.ng
CERT_RESOLVER=le

# Real IP Header Configuration
# Common options:
# - CF-Connecting-IP (Cloudflare)
# - X-Real-IP (Nginx proxy)
# - X-Forwarded-For (Standard proxy)
REAL_IP_HEADER=CF-Connecting-IP

# ==========================================
# DATABASE (Connect to existing MariaDB)
# ==========================================
DB_USER=root
DB_PASSWORD=your-mariadb-root-password
DB_HOST=mariadb-database
DB_PORT=3306
DB_NAME=ivarse_strapi

# ==========================================
# STRAPI SECRETS (Generate with: openssl rand -base64 32)
# ==========================================
JWT_SECRET=change-this-jwt-secret-min-32-chars
ADMIN_JWT_SECRET=change-this-admin-jwt-secret-min-32-chars
API_TOKEN_SALT=change-this-api-token-salt-min-32-chars
APP_KEYS=change-key1,change-key2,change-key3,change-key4

# ==========================================
# ERPNEXT INTEGRATION
# Note: These are stored in Strapi Site Config
# Environment variables are fallback only
# ==========================================
ERPNEXT_URL=https://erp.yourdomain.com
ERPNEXT_API_KEY=your-erpnext-api-key
ERPNEXT_API_SECRET=your-erpnext-api-secret

# ==========================================
# FRONTEND CONFIGURATION
# ==========================================
VITE_STRAPI_API_URL=https://cms.itechnologies.ng
VITE_ENABLE_FALLBACKS=true
VITE_ENABLE_STRAPI_CMS=true
VITE_ENABLE_ERPNEXT_INTEGRATION=true

# ==========================================
# APPLICATION SETTINGS
# ==========================================
NODE_ENV=production
LOG_LEVEL=info
