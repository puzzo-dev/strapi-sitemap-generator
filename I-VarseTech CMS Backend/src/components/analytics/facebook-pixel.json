{
  "collectionName": "components_analytics_facebook_pixel",
  "info": {
    "displayName": "Facebook Pixel",
    "description": "Facebook Pixel configuration for conversion tracking"
  },
  "options": {},
  "attributes": {
    "enabled": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "pixelId": {
      "type": "string",
      "required": false,
      "regex": "^[0-9]{15,16}$"
    },
    "advancedMatching": {
      "type": "boolean",
      "default": true
    },
    "automaticMatching": {
      "type": "boolean",
      "default": true
    },
    "customEvents": {
      "type": "json",
      "required": false
    }
  }
}
