{
  "collectionName": "components_analytics_matomo",
  "info": {
    "displayName": "Matomo Analytics",
    "description": "Matomo (Piwik) analytics configuration"
  },
  "options": {},
  "attributes": {
    "enabled": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "siteId": {
      "type": "string",
      "required": false,
      "regex": "^[0-9]+$"
    },
    "url": {
      "type": "string",
      "required": false
    },
    "trackSubdomains": {
      "type": "boolean",
      "default": true
    },
    "cookieDomain": {
      "type": "string",
      "required": false
    },
    "domains": {
      "type": "json",
      "required": false
    }
  }
}
